{
  "compilerOptions": {
    "outDir": "built",
    "module": "es6",
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,

    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*",
  ]
}